            <action method="addCss">
                <stylesheet>full_width_image_slider/css/component.css</stylesheet>
            </action>
            <action method="addJs">
                <script>lib/jquery/jquery-1.10.2.min.js</script>
            </action>
            <action method="addJs">
                <script>lib/jquery/noconflict.js</script>
            </action>
