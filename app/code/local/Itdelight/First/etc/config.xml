    <admin>
        <routers>
            <itdelight_first>
                <use>admin</use>
                <args>
                    <module>Itdelight_First</module>
                    <frontName>first_admin</frontName>
                </args>
            </itdelight_first>
        </routers>
    </admin>
     <frontend>
        <routers>
            <itdelight_first>
                <use>standard</use>
                <args>
                    <module>Itdelight_First</module>
                    <frontName>first</frontName>
                </args>
            </itdelight_first>
        </routers>
         <layout>
             <updates>
                 <itdelight_first>
                     <file>itdelight_first.xml</file>
                 </itdelight_first>
             </updates>
         </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <firstconfig_options>
                                            <title>Store Hello World Module Section</title>
                                        </firstconfig_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>